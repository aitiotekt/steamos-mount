{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "store:default",
    "dialog:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "pkexec",
          "args": true,
          "sidecar": false
        },
        {
          "name": "sudo",
          "args": true,
          "sidecar": false
        }
      ]
    }
  ]
}